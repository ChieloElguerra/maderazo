@model IEnumerable<kapoy.Models.user>

@{
    ViewBag.Title = "Index";
}


<h2>List of Users</h2>
<style>
    body {
        background-image: url("../../Content/splash.jpg");
        background-attachment:fixed;
    }
    h2 {
        font-family: 'Trebuchet MS';
        font-weight: 100;
        font-size: 40px;
        text-align: center;
    }
    table {
        border-collapse: collapse;
        width: 100%;
        font-family: 'Times New Roman';
        font-size: 17px;
    }

    th, td {
        border: 5px solid #dddddd;
        border-radius:5px;
        text-align: left;
        padding: 12px; /* Increase padding for better spacing */
    }

    th {
        background-color: #F8F7FF;
        text-align: center;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-links {
        white-space: nowrap;
    }

        .action-links a {
            margin-right: 10px;
        }

    /* Adjust the width of each column */
    th:first-child,
    td:first-child {
        width: 20%; /* Adjust the width as needed */
    }

    th:nth-child(2),
    td:nth-child(2) {
        width: 20%; /* Adjust the width as needed */
    }

    th:nth-child(3),
    td:nth-child(3) {
        width: 30%; /* Adjust the width as needed */
    }

    th:nth-child(4),
    td:nth-child(4) {
        width: 20%; /* Adjust the width as needed */
    }

    th:last-child,
    td:last-child {
        width: 10%; /* Adjust the width as needed */
    }

    /* Hover effect for table rows */
    tr:hover td {
        background-color: #7BCEA6; /* Adjust the background color for the hover effect */
    }
    .options-btn-group {
        white-space: nowrap;
    }

        .options-btn-group a {
            display: inline-block;
            margin-right: 5px;
            padding: 8px 12px;
            text-decoration: none;
            color: #000000;
            cursor: pointer;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

    .edit-btn {
        background-color: #4caf50; /* Green color for Edit */
    }

    .details-btn {
        background-color: #3498db; /* Blue color for Details */
    }

    .delete-btn {
        background-color: #e74c3c; /* Red color for Delete */
    }

    .options-btn-group a:hover {
        background-color: #ff0000; /* Darker background on hover */
    }
     /* Style the action links */
    .action-links {
        text-align: center;
        margin-top: 20px;
    }

     .action-links a {
        display: inline-block;
        padding: 10px 20px;
        margin-right: 10px;
        text-decoration: none;
        color: #fff;
        background-color: #4CAF50;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

  .action-links a:hover {
       background-color: #45a0 49;
    }
       
</style>

<p class="action-links">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.password)
        </th>*@

        <th>Options</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.password)
        </td>*@
            <td class="options-btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = item.user_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.user_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.user_id })
            </td>
    </tr>
    }

</table>
